{% extends 'base.html.twig' %}

{% block title %}Allergens index{% endblock %}

{% block body %}
    <h1>Allergens index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for allergen in allergens %}
            <tr>
                <td>{{ allergen.id }}</td>
                <td>{{ allergen.name }}</td>
                <td>
                    <a href="{{ path('allergens_show', {'id': allergen.id}) }}">show</a>
                    <a href="{{ path('allergens_edit', {'id': allergen.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('allergens_new') }}">Create new</a>
{% endblock %}
